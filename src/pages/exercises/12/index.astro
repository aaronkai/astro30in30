<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Key Detection</title>
  </head>
  <body>
    <h1 class="hint">Type the secret code (hint: 'wesbos')</h1>
    <h1 class="hidden">You typed the secret code!</h1>
    <script>
      let pressed = [];
      const secretCode = "wesbos";
      let counter = 0;
      const secret = document.querySelector(".hidden");
      const hint = document.querySelector(".hint");

      window.addEventListener("keyup", (e) => {
        if (e.key === secretCode[counter]) {
          pressed.push(e.key);
          counter++;
        } else {
          pressed = [];
          secret.classList.add("hidden");
          hint.classList.remove("hidden");
          counter = 0;
        }
        if (pressed.join("") === secretCode) {
          secret.classList.remove("hidden");
          hint.classList.add("hidden");
        }
      });
    </script>
  </body>
</html>

<style>
  body {
    background-color: aquamarine;
  }
  .hidden {
    display: none;
  }
</style>
