---
import Footer from "@/components/Footer.astro";
export interface Props {
  title: string;
  stylesheet?: string;
}
const { title, stylesheet } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-50">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    {stylesheet &&
       <link rel="stylesheet" href={Astro.resolve(stylesheet)}>
    }
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="grid grid-rows-layout min-h-screen gap-8 justify-center w-full">
    <header>
      <nav>
        <a href="/" class="">Home</a>
      </nav>
    </header>
    <div class="wrapper">
      <slot />
    </div>
    <Footer />
  </body>
</html>
